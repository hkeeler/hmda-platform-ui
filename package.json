{
  "name": "hmda-platform-ui",
  "version": "0.0.0",
  "description": "Frontend code for the HMDA filing system",
  "main": "index.js",
  "engines": {
    "node": ">=6.x"
  },
  "scripts": {
    "test": "jest",
    "snyk": "snyk test",
    "clean": "rimraf ./dist && mkdir -p ./dist ./dist/js ./dist/css ./dist/fonts ./dist/img",
    "start": "./server/server.js",
    "dev:js": "browserify ./src/js/index.js > ./dist/js/app.min.js",
    "dev:less": "lessc ./src/less/app.less ./dist/css/app.css && cp node_modules/cf-icons/src/fonts/* ./dist/fonts",
    "dev:html": "cp src/index.html dist/index.html",
    "dev:img": "cp src/img/ffiec-logo.png dist/img/ffiec-logo.png",
    "dev:build": "npm run dev:js && npm run dev:less && npm run dev:html",
    "postinstall": "npm run clean",
    "watch:js": "nodemon --exitcrash -e js,jsx -w src/js -x 'npm run dev:js'",
    "watch:tests": "nodemon --exitcrash -e js -w __tests__ -x 'npm test'",
    "watch:less": "nodemon --exitcrash -e less -w src/less -x 'npm run dev:less'",
    "watch:html": "nodemon --exitcrash -e html -w src -x 'npm run dev:html'",
    "watch:server": "nodemon --exitcrash -e js,json -w server -x 'npm start'",
    "watch": "npm run watch:server & npm run watch:js & npm run watch:tests & npm run watch:less & npm run watch:html",
    "demo": "npm run dev:js & npm run dev:less & npm run dev:html & npm run dev:img & npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfpb/hmda-platform-ui.git"
  },
  "keywords": [
    "HMDA"
  ],
  "author": "Consumer Financial Protection Bureau",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cfpb/hmda-platform-ui/issues"
  },
  "homepage": "https://github.com/cfpb/hmda-platform-ui#readme",
  "devDependencies": {
    "babel-jest": "12.1.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "babelify": "7.2.0",
    "body-parser": "1.15.1",
    "browserify": "13.0.0",
    "express": "4.13.4",
    "express-history-api-fallback": "2.0.0",
    "jest-cli": "12.1.1",
    "less": "2.7.1",
    "nodemon": "1.9.1",
    "react-addons-test-utils": "15.0.1",
    "reactify": "1.1.1",
    "rimraf": "2.5.2",
    "snyk": "1.13.3"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ]
  },
  "dependencies": {
    "jquery": "2.2.4",
    "jquery.easing": "1.3.2",
    "react": "15.0.1",
    "react-dom": "15.0.1",
    "react-router": "2.2.1",
    "superagent": "1.8.3",
    "uswds": "0.9.4"
  }
}
